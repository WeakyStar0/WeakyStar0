<div id="project-overlay" class="overlay hidden">
    <div class="overlay-content">
        <button id="close-overlay" class="close-btn">&times;</button>

        <div class="overlay-body">
            <!-- CAROUSEL SECTION -->
            <div class="carousel-container">
                <div id="carousel-track" class="carousel-track"></div>

                <div class="btn-organizer" id="btn-organizer">
                    <div class="btn-group" id="btn-group">
                        <img
                            src="/img/btn-prev.png"
                            alt="Previous"
                            class="carousel-btn prev"
                            id="prev-btn"
                        />
                        <img
                            src="/img/btn-next.png"
                            alt="Next"
                            class="carousel-btn next"
                            id="next-btn"
                        />
                    </div>
                </div>

                <div id="carousel-dots" class="carousel-dots"></div>

                <img
                    src="/img/frame.png"
                    alt="Carousel Frame"
                    class="carousel-frame"
                    id="carousel-frame"
                />
            </div>
            <div class="overlay-text">
                <h2 id="overlay-title">Project Title</h2>
                <div id="overlay-tech" class="project-tech"></div>
                <hr />
                <p id="overlay-desc">Detailed description...</p>

                <div class="overlay-extra">
                    <h3>Key Features</h3>
                    <ul>
                        <li>Performance Optimized</li>
                        <li>Responsive Design</li>
                        <li>Modern Tech Stack</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .carousel-container {
        position: relative; /* already exists */
        width: 100%;
        aspect-ratio: 16 / 9;
        background: #111;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #333;
    }

    /* FRAME STYLE */
    .carousel-frame {
        position: absolute; /* sit on top */
        top: 0;
        left: 0;
        width: 101%;
        height: 101%;
        translate: -0.5% -0.5%; /* center perfectly */
        pointer-events: none; /* clicks go through to carousel buttons */
        z-index: 20; /* higher than buttons */
    }

    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(8px); /* Blur background */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 2000;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .overlay-body {
        display: flex;
        flex-direction: column; /* Stack vertically for better reading with a wide carousel */
        gap: 2rem;
    }

    .carousel-container {
        position: relative;
        width: 100%;
        aspect-ratio: 16 / 9; /* Forces 16:9 Ratio */
        background: #111;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid #333;
    }

    .carousel-track {
        display: flex;
        width: 100%;
        height: 100%;
        transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    }

    :global(.carousel-track img) {
        min-width: 100%;
        height: 100%;
        object-fit: cover; /* This handles the cropping */
    }

    .carousel-btn:hover {
        filter: brightness(-1);
    }

    .btn-organizer {
        width: 100%;
        height: 20%;
        position: absolute;
        bottom: 0;
        pointer-events: none;
    }

    /* Button group container */
    .btn-group {
        position: absolute;
        bottom: 0%;
        right: 1%;
        z-index: 30;
        pointer-events: none;
    }

    /* Buttons as images */
    .btn-group .carousel-btn {
        width: auto;
        height: auto;
        cursor: pointer;
        pointer-events: auto;
        object-fit: contain;
    }

    .carousel-dots {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
    }

    :global(.c-dot) {
        width: 10px;
        height: 10px;
        background: rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        cursor: pointer;
    }

    :global(.c-dot.active) {
        background: #6366f1;
        transform: scale(1.2);
    }

    .overlay-text {
        padding: 0 1rem;
    }

    .overlay.active {
        opacity: 1;
        pointer-events: auto;
    }

    .overlay-content {
        background: #1e1e2e;
        width: 80%;
        height: 80%;
        border-radius: 20px;
        border: 1px solid #333;
        position: relative;
        overflow-y: auto; /* Internal scrolling */
        padding: 3rem;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    }

    /* Custom scrollbar for overlay */
    .overlay-content::-webkit-scrollbar {
        width: 8px;
    }
    .overlay-content::-webkit-scrollbar-thumb {
        background: #6366f1;
        border-radius: 10px;
    }

    .close-btn {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: none;
        border: none;
        color: white;
        font-size: 2.5rem;
        cursor: pointer;
        line-height: 1;
    }

    .overlay-body {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
    }

    .overlay-image img {
        width: 100%;
        border-radius: 10px;
        border: 1px solid #333;
    }

    .overlay-text h2 {
        font-size: 2.5rem;
        color: #a5b4fc;
        margin-bottom: 1rem;
    }

    hr {
        border: 0;
        border-top: 1px solid #333;
        margin: 1.5rem 0;
    }

    .overlay-text p {
        color: #ccc;
        line-height: 1.8;
        font-size: 1.1rem;
    }

    .overlay-extra {
        margin-top: 2rem;
    }
    .overlay-extra h3 {
        color: #6366f1;
        margin-bottom: 1rem;
    }
    .overlay-extra ul {
        color: #888;
        padding-left: 1.2rem;
    }
    .overlay-extra li {
        margin-bottom: 0.5rem;
    }

    @media (max-width: 900px) {
        .overlay-body {
            grid-template-columns: 1fr;
        }
        .overlay-content {
            width: 95%;
            height: 95%;
            padding: 1.5rem;
        }
    }

    .hidden {
        display: none;
    }
</style>
